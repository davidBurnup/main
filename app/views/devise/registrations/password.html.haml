.row
  = render "devise/registrations/menu"

  .col-lg-6.col-md-6.col-sm-6.col-xs-12.well
    .row#profile-form
      %h1.col-lg-12
        Modifier votre mot de passe
      .clear
        = simple_form_for(resource, :as => resource_name, :url => update_current_password_path,  :multipart => true , :html => {:method => :put, :role => 'form'}) do |f|
          .col-lg-12
            = devise_error_messages!
          .form-group
            .col-lg-4.col-md-4.col-sm-4.col-xs-4.col-xs-offset-1.profile-label
              = f.label :current_password
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              = f.password_field :current_password, class: 'form-control'
          .form-group
            .col-lg-4.col-md-4.col-sm-4.col-xs-4.col-xs-offset-1.profile-label
              = f.label :password
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              = f.password_field :password, :autocomplete => 'off', class: 'form-control'
          .form-group
            .col-lg-4.col-md-4.col-sm-4.col-xs-4.col-xs-offset-1.profile-label
              = f.label :password_confirmation
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              = f.password_field :password_confirmation, class: 'form-control'
          .form-group
            .col-lg-4.col-md-4.col-sm-4.col-xs-4.col-xs-offset-1.profile-label
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              = f.submit 'Modifier', :class => 'btn btn-primary'
