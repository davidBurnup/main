<% if false %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => 'form'}) do |f| %>
    <h3>Cr√©er un compte</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.input :first_name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :last_name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :church_id, as: :select, collection: Church.all.map{|c| [c.name, c.id]}, class: 'form-control', include_blank: false %>
    </div>
    <%= f.submit "S'INSCRIRE", :class => 'btn btn-primary right'%>
<% end %>
<% end %>

