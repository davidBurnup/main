<div class="">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Connexion</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to "S'inscrire", new_registration_path(resource_name), class: 'pull-right'  %>
      <% end -%>
      <%= f.input :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "OubliÃ© le votre ?", new_password_path(resource_name), class: 'pull-right' %>
      <% end -%>
      <%= f.input :password, class: 'form-control' %>
    </div>
      <%= f.submit 'SE CONNECTER', :class => 'btn btn-primary right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end -%>
  <% end %>
</div>
