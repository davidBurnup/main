- if a.trackable and a.owner
  = render "/public_activity/activity_container",
      :activity => a,
      :title => a.owner.full_name,
      :image_link => edit_user_registration_path,
      :image_url => a.owner.avatar.url(:tiny),
      :image_alt => "Photo de #{a.owner.full_name}",
      :content => a.trackable.content_html,
      :trackable =>  a.trackable,
      :trackable_file_key_name => :attachment,
      :trackable_files => a.trackable.music_medias,
      :not_linkable => true
