= simple_form_for(@song, html: {class: 'song-form', autocomplete: 'off'}) do |f|
  =# f.error_notification

  .form-inputs
    = f.input :title, :wrapper_html => {:class => "col-lg-9 col-md-9 col-sm-9 col-xs-9"}, :label => false, :placeholder => Song.human_attribute_name(:title)

    #song-key-padder
      = f.input :key,:as => :select,:include_blank => false,:collection => @song.available_keys,:wrapper_html => {:class => "col-lg-3 col-md-3 col-sm-3 col-xs-3"}
    = f.input :content, :wrapper_html => {:class => "col-lg-12"}, :input_html => {:rows => 20, :class => "autogrow"}, :label => false, :placeholder => "Paroles"
    = f.input :author, :wrapper_html => {:class => "col-lg-6"}, :placeholder => "Auteur", :label => false
    = f.input :bpm, :wrapper_html => {:class => "col-lg-6"}, :placeholder => "BPM", :label => false
  .form-actions
    .col-lg-12
      = button_tag :class => "btn-sm btn-primary btn" do
        %i.glyphicon-save.glyphicon
        Enregistrer
