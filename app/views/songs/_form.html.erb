<%= simple_form_for(@song, html: {class: 'form-horizontal', autocomplete: 'off'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title,
                  :wrapper_html => {:class => "col-lg-9 col-md-9 col-sm-9 col-xs-9"},
                  :label => false,
                  :placeholder => Song.human_attribute_name(:title)
      %>
      <div id="song-key-padder">

      <label class="select optional control-label col-lg-1 col-md-1" for="song_key">Cl√©</label>
        <%= f.input :key,
                    :as => :select,
                    :include_blank => false,
                    :collection => @song.available_keys,
                    :label => false,
                    :wrapper_html => {:class => "col-lg-2 col-md-2 col-sm-2 col-xs-2"} %>
        <%= f.input :content, :wrapper_html => {:class => "col-lg-12"}, :input_html => {:rows => 20, :class => "autogrow"}, :label => false, :placeholder => "Paroles" %>
      </div>
    </div>

    <div class="form-actions">
      <div class=" col-lg-12">
        <p></p>
        <%= f.button :submit %>
      </div>
    </div>
<% end %>
