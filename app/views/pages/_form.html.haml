= simple_form_for(@page) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :slogan
    = f.input :description, as: :text
    = f.input :youtube_video_id
    -# = f.input :is_valid
    = f.input :avatar
    = f.input :background_image
    = f.input :address
    = f.input :youtube_url
    = f.input :facebook_url
    = f.input :twitter_url
    = f.input :patreon_url

  .form-actions
    = f.button :submit, class: "btn-md"
  %br
